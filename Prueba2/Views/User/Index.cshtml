@model IEnumerable<Prueba2.Models.Usuario>

@{
    ViewBag.Title = "Usuarios";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Crear Nuevo Usuario", "Create")
</p>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Nombres)</th>
        <th>@Html.DisplayNameFor(model => model.Apellidos)</th>
        <th>@Html.DisplayNameFor(model => model.TipoDeUsuario.NombreTipo)</th>
        <th>@Html.DisplayNameFor(model => model.Correo)</th>
        <th>Acciones</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Nombres)</td>
            <td>@Html.DisplayFor(modelItem => item.Apellidos)</td>
            <td>@Html.DisplayFor(modelItem => item.TipoDeUsuario.NombreTipo)</td>
            <td>@Html.DisplayFor(modelItem => item.Correo)</td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IdUsuario }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.IdUsuario })
            </td>
        </tr>
    }
</table>
