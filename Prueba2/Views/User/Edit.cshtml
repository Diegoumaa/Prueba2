@model Prueba2.Models.Usuario

@{
    ViewBag.Title = "Editar Usuario";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.IdUsuario)

    <div class="form-group">
        @Html.LabelFor(model => model.Nombres)
        @Html.TextBoxFor(model => model.Nombres, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Nombres)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Apellidos)
        @Html.TextBoxFor(model => model.Apellidos, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Apellidos)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TipoUsuarioId, "Tipo de Usuario")
        @Html.DropDownList("TipoUsuarioId", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.TipoUsuarioId)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Correo)
        @Html.TextBoxFor(model => model.Correo, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Correo)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Contraseña)
        @Html.PasswordFor(model => model.Contraseña, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Contraseña)
    </div>

    <button type="submit" class="btn btn-success">Guardar Cambios</button>
}
