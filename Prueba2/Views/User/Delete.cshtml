@model Prueba2.Models.Usuario

@{
    ViewBag.Title = "Eliminar Usuario";
}

<h2>@ViewBag.Title</h2>

<h3>¿Estás seguro de que deseas eliminar este usuario?</h3>
<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Nombres)</dt>
        <dd>@Html.DisplayFor(model => model.Nombres)</dd>

        <dt>@Html.DisplayNameFor(model => model.Apellidos)</dt>
        <dd>@Html.DisplayFor(model => model.Apellidos)</dd>

        <dt>@Html.DisplayNameFor(model => model.TipoDeUsuario.NombreTipo)</dt>
        <dd>@Html.DisplayFor(model => model.TipoDeUsuario.NombreTipo)</dd>

        <dt>@Html.DisplayNameFor(model => model.Correo)</dt>
        <dd>@Html.DisplayFor(model => model.Correo)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            @Html.ActionLink("Cancelar", "Index")
        </div>
    }
</div>
